<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:id="@+id/frag_user">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_only_2"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tennguoidung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gothammedium1"
            android:text="Tên người dùng"
            android:textColor="#ffffff"
            android:textSize="27sp"
            app:layout_constraintStart_toEndOf="@+id/imageviewuserprofile"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/black"
            android:src="@drawable/settings"
            android:layout_marginTop="7dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothammedium1"
            android:text="Cài đặt"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18dp"
            app:backgroundTint="@color/black"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="314dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/next"
            app:iconSize="25dp"
            app:iconGravity="end"
            app:backgroundTint="@color/black">
        </com.google.android.material.button.MaterialButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/black"
            android:src="@drawable/accept"
            android:layout_marginTop="7dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothammedium1"
            android:text="Điều khoản"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18dp"
            app:backgroundTint="@color/black"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="314dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/next"
            app:iconSize="25dp"
            app:iconGravity="end"
            app:backgroundTint="@color/black">
        </com.google.android.material.button.MaterialButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/black"
            android:src="@drawable/policy"
            android:layout_marginTop="7dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothammedium1"
            android:text="Chính sách"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18dp"
            app:backgroundTint="@color/black"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="314dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/next"
            app:iconSize="25dp"
            app:iconGravity="end"
            app:backgroundTint="@color/black">
        </com.google.android.material.button.MaterialButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/black"
            android:src="@drawable/logout"
            android:layout_marginTop="7dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dangxuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dangxuat"
            android:fontFamily="@font/gothammedium1"
            android:text="Đăng xuất"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18dp"
            app:backgroundTint="@color/black"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="314dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_signout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/next"
            app:iconSize="25dp"
            app:iconGravity="end"
            app:backgroundTint="@color/black">
        </com.google.android.material.button.MaterialButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/logo_only_2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothammedium"
            android:gravity="center"
            android:text="EKIV MUSIC"
            android:textColor="#ffff"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/gothammedium1"
            android:gravity="center"
            android:text="Release: 20/4/2022"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>



</LinearLayout>